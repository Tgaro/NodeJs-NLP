<!DOCTYPE html>
<html lang="en">
	
	<head>
		<% include ../partials/head %>
	</head>

	<header>
		<% include ../partials/header %>
	</header>

	<body>

		<main>

			<div class="row">
				<div class="col s12 m6 offset-m3">
					<div class="card center-align">
						<div class="card-content">

							<span class="card-title">Enter answer</span>

							<form action="/answer" method="post">

								<div class="row">
									<div class="input-field">
										<select name="languages">
											<option value="" disabled selected>Choose a language</option>
											<option value="en">English</option>
										</select>
										<label>Language</label>
									</div>
								</div>

								<div class="row">
									<div class="input-field">
										<label for="answerText">Answer text</label>
										<textarea id="answerText" name="answerText" class="materialize-textarea"></textarea>
									</div>
								</div>

								<div class="row">
									<div class="input-field">
										<label for="context">Answer context</label>
										<input id="context" name="context" type="text" class="validate"><%= context %>
									</div>
								</div>

								<div class="row">
									<div class="input-field">
										<label for="filePath">File Path</label>
										<input id="filePath" name="filePath" type="text" class="validate">
									</div>
								</div>

								<div class="card-action">
									<button id="btnAddAnswer" class="btn btn-up" type="submit">Add</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>



